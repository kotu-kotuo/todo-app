-# = render 'form', board: @board
= form_with(model: @board, url: board_path(@board), method: 'put', local: true) do |f|
  %div
    = f.label :title, 'タイトル'
  %div
    = f.text_field :title, class: 'text'
  %div
    = f.label :content, '内容'
  %div
    = f.text_area :content
  = f.submit '保存', class: 'btn-primary'
